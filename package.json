{
  "name": "hackerlab-app",
  "version": "0.2.0",
  "description": "The web app for HackerLab account management",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation eslint . --cache --cache-location .eslintcache",
    "check:types": "pnpm exec tsc --noEmit --pretty",
    "check:version": "tsx scripts/version-check.ts",
    "check": "FULL_CHECK=1 pnpm lint && pnpm check:types && pnpm check:version",
    "migrate:create": "payload migrate:create",
    "prep": "pnpm codegen && pnpm migrate:create",
    "codegen": "pnpm payload generate:importMap && pnpm payload generate:types",
    "ci": "payload migrate && pnpm run build",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "add:ui": "pnpm dlx shadcn@latest add"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@hookform/resolvers": "^5.2.2",
    "@payloadcms/db-postgres": "3.69.0",
    "@payloadcms/next": "3.69.0",
    "@payloadcms/richtext-lexical": "3.69.0",
    "@payloadcms/storage-vercel-blob": "^3.69.0",
    "@payloadcms/ui": "3.69.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "lucide-react": "^0.560.0",
    "next": "16.1.0",
    "next-auth": "5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "payload": "3.69.0",
    "payload-authjs": "^0.10.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.69.0",
    "sharp": "0.34.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@next/eslint-plugin-next": "16.1.0",
    "@playwright/test": "1.56.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "4.5.2",
    "chalk": "^5.6.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "16.1.0",
    "jsdom": "26.1.0",
    "playwright": "1.56.1",
    "playwright-core": "1.56.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "22.x || 24.x",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
